{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"experimentalScannerIgnores": [
			".next",
			"node_modules",
			"out",
			"build",
			"dist"
		],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "crlf"
	},
	"javascript": {
		"formatter": { "quoteStyle": "double" },
		"parser": { "unsafeParameterDecoratorsEnabled": true }
	},
	"linter": {
		"enabled": true,
		"rules": { "recommended": false }
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
